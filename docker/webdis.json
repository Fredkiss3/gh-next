{
  "http_host": "0.0.0.0",
  "http_port": 7379,
  "redis_host": "127.0.0.1",
  "redis_port": 6379,

  "acl": [
    {
      "disabled": ["*"]
    },

    {
      "http_basic_auth": "user:password",
      "enabled": [
        "GET",
        "SET",
        "DEL",
        "SETEX",
        "HSET",
        "HGETALL",
        "HGET",
        "SREM",
        "SADD",
        "SMEMBERS"
      ]
    }
  ],

  "verbosity": 4,
  "logfile": "/dev/stderr"
}
